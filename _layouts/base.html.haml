    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{ :href=>'/' } Lakeside Machine
          %a.btn.btn-navbar{'data-toggle'=>'collapse', 'data-target'=>'.nav-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .nav-collapse
            %ul.nav
              %li
                %a{ :href=>'/' } Home
              %li
                %a{ :href=>'/products/' } Products
              %li
                %a{ :href=>'/shop/' } Our Shop
              %li
                %a{ :href=>'/people/' } Our People
              %li
                %a{ :href=>'/work/' } Our Work
